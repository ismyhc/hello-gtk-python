#!@PYTHON@

import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)

locale.bindtextdomain('hello-gtk-python', localedir)
locale.textdomain('hello-gtk-python')
gettext.install('hello-gtk-python', localedir)

if __name__ == '__main__':
    import gi
    from gi.repository import Gio

    resource = Gio.Resource.load(
        os.path.join(pkgdatadir, 'hello-gtk-python.gresource')
    )
    resource._register()

    from hello_gtk_python import main
    sys.exit(main.main(VERSION))
